@model AgendaApp.MVC.Models.Account.AccountRegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgendaApp : Cadastro de Usuários</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="row mt-5">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <img src="https://www.cotiinformatica.com.br/imagens/logo-coti-informatica.svg" />
                        <h4>Cadastro de usuários</h4>
                        <p>Preencha os campos para criar sua conta.</p>
                    </div>

                    <div class="mb-3 text-center">
                        <h5 class="text-success">@TempData["MensagemSucesso"]</h5>
                        <h5 class="text-danger">@TempData["MensagemErro"]</h5>
                    </div>

                    <div class="text-danger">
                        <!-- Exibir as mensagens de erro de validação -->
                        @Html.ValidationSummary()
                    </div>

                    @using (Html.BeginForm())
                    {
                        <div class="mb-3">
                            <label>Nome do usuário:</label>
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label>Email do usuário:</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label>Senha do usuário:</label>
                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label>Confirme a senha:</label>
                            @Html.PasswordFor(model => model.SenhaConfirmacao, new { @class = "form-control" })
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" class="btn btn-success" value="Realizar Cadastro" />
                        </div>
                        <div class="mb-3 d-grid">
                            <a href="/Account/Login" class="btn btn-light">
                                Já possui conta? <strong>Acesse aqui!</strong>
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>



